<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TestHD.Controls"
    xmlns:core="using:TestHD.Core">

    <!--Fonts-->
    <x:Double x:Key="MyFontGiant">80</x:Double>
    <x:Double x:Key="MyFontExtraBig">50</x:Double>
    <x:Double x:Key="MyFontBig">34</x:Double>
    <x:Double x:Key="MyFont">24</x:Double>
    <x:Double x:Key="MyFontSmall">20</x:Double>
    <x:Double x:Key="MyFontExtraSmall">14</x:Double>

    <!--Spacing & decoration-->
    <CornerRadius x:Key="MyCornerRadius">5</CornerRadius>
    <Thickness x:Key="MyPadding">8</Thickness>
    <Thickness x:Key="MyPaddingSmall">5</Thickness>
    <Thickness x:Key="MyBorderThickness">1</Thickness>

    <!--MyButton-->
    <Style x:Key="MyButtonStyle"
           TargetType="controls:MyButton">
        <Setter Property="FontSize"
                Value="{StaticResource MyFontExtraSmall}" />
        <Setter Property="Width"
                Value="130" />
        <Setter Property="Height"
                Value="80" />
        <Setter Property="CornerRadius"
                Value="{StaticResource MyCornerRadius}" />
        <Setter Property="Foreground"
                Value="{StaticResource OsmoTextPrimaryBrush}" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="BorderBrush"
                Value="{StaticResource OsmoBorderBrush}" />
        <Setter Property="BorderThickness"
                Value="{StaticResource MyBorderThickness}" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>

</ResourceDictionary>
