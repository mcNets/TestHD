<UserControl
    x:Class="TestHD.ShellControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:TestHD.Controls"
    xmlns:local="using:TestHD">

    <Grid ColumnDefinitions="Auto,*">

        <!--LATERAL BAR-->
        <Border Grid.Column="0"
                Background="{StaticResource OsmoGradientBlauFosc}"
                MinWidth="116"
                Padding="8">

            <StackPanel x:Name="PART_LateralBar"
                        Orientation="Vertical"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Spacing="8">

                <controls:OsmoButton Text="Page 1"
                                     Symbol="Admin"/>

                <controls:OsmoButton Text="Page 2"
                                     Symbol="ContactPresence"/>

            </StackPanel>

        </Border>

        <!--CONTENT-->
        <Grid Grid.Column="1"
              RowDefinitions="Auto, *"
              Background="Black">

            <!--BACKGROUND IMAGE-->
            <Image Grid.Row="0"
                   Grid.RowSpan="2"
                   x:Name="PART_BackgroundImage"
                   Background="Transparent"
                   Source="{StaticResource ImgBckg2}"
                   Opacity="0.2"
                   Stretch="Uniform"/>

            <!--CAPTION-->
            <TextBlock Grid.Row="0"
                       x:Name="PART_Caption"
                       HorizontalAlignment="Center"
                       Text="CAPTION"
                       FontSize="30"
                       Foreground="White"
                       Margin="10, 5"/>

            <!--CONTENT-->
            <ContentPresenter Grid.Row="1"
                              x:Name="PART_Content"/>

        </Grid>

    </Grid>

</UserControl>
